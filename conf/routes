# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Login Page
GET     /login                      controllers.LoginController.login
POST    /loginSubmit                controllers.LoginController.loginSubmit

# Flight Page
GET     /flights                    controllers.HomeController.flights

# Add Flights Page
GET     /addflight                  controllers.HomeController.addFlight
POST    /addFlightSubmit            controllers.HomeController.addFlightSubmit
GET     /delFlight/:id              controllers.HomeController.deleteFlight(id: Integer)
GET     /updateFlight/:id           controllers.HomeController.updateFlight(id: Integer)

# Sign Up Page
GET     /signup                     controllers.SignupController.signup
POST    /signupSubmit               controllers.SignupController.signupSubmit

# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
